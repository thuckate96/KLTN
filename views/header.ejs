    <script type="text/javascript">
      $(document).ready(function(){
        // alert($('#namelog').val());
        if(!$('#namelog').val()){
          $('#log').html("<a href='login'> <span class='glyphicon glyphicon-log-in'> Đăng nhập</span></a>");
        }else {
          $('#log').html("<div class='dropdown'> "+
          "<a><%=name%></a>"+
          "<div class='dropdown-content'>"+
          "<a href='/logout'> Logout </a>"+
          "</div>"+
          "</div>");
        }
        $("#nav_page ul li a").click(function(){
          $(this).parent().find('li a.active').removeClass('active');
          $(this).addClass('active');
        });
      });
    </script>
  </head>

  </body>


    <div class="">
      <nav class="headerDiv">
