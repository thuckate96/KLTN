    <script type="text/javascript">
      $(document).ready(function(){
        // alert($('#namelog').val());
        if(!$('#namelog').val()){
          $('#log').html("<a href='login'> <span class='glyphicon glyphicon-log-in'> Đăng nhập</span></a>");
        }else {
          $('#log').html("<div class='dropdown'> "+
          "<a><%=name%></a>"+
          "<div class='dropdown-content'>"+
          "<a href='/logout'> Logout </a>"+
          "</div>"+
          "</div>");
        }
        $("#activity").hide();
        $("#cancel_activitybox").click(()=>{
          $("#activity").hide();
        });
        $("#root").click(()=>{
          $("#activity").show();
        });
        $("#nav_page ul li a").click(function(){
          $(this).parent().find('li a.active').removeClass('active');
          $(this).addClass('active');
        });

        $("#notification").hide();
        $("#noti_click").click(function(){
          $("#notification").show();
        });
        $("#cancel_notifibox").click(function(){
          $("#notification").hide();
        });
        $("#notifi_val").text($("#lenNotifi").val());
        $("#new_notifi").text("Có "+$("#lenNotifi").val()+" thông báo mới ");
        $("#show_notification").html("");
        for(let noti = 0; noti < $("#lenNotifi").val() ; noti++){
          $("#show_notification").append(""+
          '<li class="">'+
            '<a href="#">'+$("#info_notifi"+noti).val()+' </a>'+
          '</li>'+
          "");
        }
      });
    </script>
  </head>

  </body>


    <div class="">
